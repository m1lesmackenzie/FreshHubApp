class Sunnyside14 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    var assetsImage = new AssetImage('assets/images/sunnyside1-4.jpg');
    var image = new Image(image: assetsImage, width: 619.9, height: 233.0);
